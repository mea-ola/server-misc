[Unit]
Description=HAProxy Reload
After=network.target
Wants=network.target

[Service]
ExecStartPre=/usr/bin/haproxy-marathon-bridge 10.134.23.196:8080
ExecStart=/usr/sbin/haproxy -f /etc/haproxy/haproxy.cfg -p /run/haproxy.pid -sf $(/usr/bin/cat /run/haproxy.pid)
KillMode=process
Restart=always
RestartSec=600

[Install]
WantedBy=multi-user.target
